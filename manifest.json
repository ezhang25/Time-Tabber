{
    "name": "TimeTabber",
    "description": "Extension that allows you to keep track of your time spent on each Google tab",
    "version": "1.0",
    "manifest_version": 3,

    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": "assets/hourglass.png"
    },

    "background": {
        "service_worker": "src/background/background.js"
    },

    "web_accessible_resources": [
    {
        "resources": ["assets/hourglass.png"],
        "matches": ["<all_urls>"]
    }
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "tabs",
        "activeTab",
        "idle",
        "storage",
        "notifications",
        "scripting"
    ]
}